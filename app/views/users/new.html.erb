
<div class="container-fluid bg-image">
  <div class="bg-image">
<div class="row">
  <div class="col-md-6 col-md-offset-3 bg-login">
  <h1>Sign up</h1>
    <%= form_for(@user, url: signin_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.submit "Sign In", class: "btn btn-primary" %>
    <% end %>

    <br>

  </div>
</div>
</div>
</div>
